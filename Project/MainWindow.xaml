<Window x:Class="Wspolbiezne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wspolbiezne"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Width="200">Masa ciała A w kilogramach:</TextBlock>
        <TextBox Width="200" MaxLength="100" Name="MassA"/>
        <TextBlock Width="200">Masa ciała B w kilogramach:</TextBlock>
        <TextBox Width="200" MaxLength="100" Name="MassB"/>
        <TextBlock Width="200">Odległość między ciałami w metrach:</TextBlock>
        <TextBox Width="200" MaxLength="100" Name="Distance"/>
        <TextBlock TextAlignment="Center" Width="450" Name="Result">Wartość siły grawitacji między ciałami = </TextBlock>
        <Button Width="200"
                Name="CalculateButton"
                Click="CalculateButton_Click"
                Content="Oblicz">
        </Button>
    </StackPanel>
</Window>
